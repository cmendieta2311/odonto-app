generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(RECEPCION)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tenantId  String   @default("default")
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model Patient {
  id        String   @id @default(uuid())
  dni       String   @unique
  firstName String
  lastName  String
  email     String?
  phone     String?
  address   String?
  history   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tenantId  String   @default("default")
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  quotes    Quote[]
  invoices  Invoice[]
  
  documentTypeId String?
  documentType   PersonDocumentType? @relation(fields: [documentTypeId], references: [id])
}


model ServiceArea {
  id         String            @id @default(uuid())
  name       String            @unique
  categories ServiceCategory[]
  tenantId   String            @default("default")
  tenant     Tenant            @relation(fields: [tenantId], references: [id])
}

model ServiceCategory {
  id       String      @id @default(uuid())
  name     String      @unique
  areaId   String?
  area     ServiceArea? @relation(fields: [areaId], references: [id])
  services Service[]
  tenantId String      @default("default")
  tenant   Tenant      @relation(fields: [tenantId], references: [id])
}

model Service {
  id         String             @id @default(uuid())
  categoryId String
  code       String             @unique
  name       String
  price      Decimal            @db.Decimal(10, 2)
  type       ServiceType
  active     Boolean            @default(true)
  quoteItems QuoteItem[]
  category   ServiceCategory    @relation(fields: [categoryId], references: [id])
  performed  ServicePerformed[]
  tenantId   String             @default("default")
  tenant     Tenant             @relation(fields: [tenantId], references: [id])
}

model Quote {
  id        String      @id @default(uuid())
  patientId String
  total     Decimal     @db.Decimal(10, 2)
  status    QuoteStatus @default(DRAFT)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  contract  Contract?
  patient   Patient     @relation(fields: [patientId], references: [id])
  items     QuoteItem[]
  tenantId  String      @default("default")
  tenant    Tenant      @relation(fields: [tenantId], references: [id])

  // Financing Data (Snapshot for draft/conversion)
  financingEnabled Boolean @default(false)
  initialPayment   Decimal @default(0) @db.Decimal(10, 2)
  installments     Int     @default(1)
}

model QuoteItem {
  id        String  @id @default(uuid())
  quoteId   String
  serviceId String
  price     Decimal @db.Decimal(10, 2)
  quantity  Int
  discount  Decimal @default(0) @db.Decimal(5, 2) // Percentage 0-100
  quote     Quote   @relation(fields: [quoteId], references: [id])
  service   Service @relation(fields: [serviceId], references: [id])
  tenantId  String  @default("default")
}

model Contract {
  id             String           @id @default(uuid())
  quoteId        String           @unique
  totalAmount    Decimal          @db.Decimal(10, 2)
  balance        Decimal          @default(0) @db.Decimal(10, 2) // Saldo pendiente
  installments   Int              @default(1)
  paymentMethod  PaymentMethod    @default(CASH)
  status         ContractStatus   @default(ACTIVE)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now()) @updatedAt
  quote          Quote            @relation(fields: [quoteId], references: [id])
  creditSchedule CreditSchedule[]
  payments       Payment[]
  proforma       Proforma?        // Opcional - documento informativo
  invoices       Invoice[]
  tenantId       String           @default("default")
  tenant         Tenant           @relation(fields: [tenantId], references: [id])
}

model Proforma {
  id         String         @id @default(uuid())
  contractId String         @unique
  total      Decimal        @db.Decimal(10, 2)
  issuedAt   DateTime       @default(now())
  tenantId   String         @default("default")
  tenant     Tenant         @relation(fields: [tenantId], references: [id])
  contract   Contract       @relation(fields: [contractId], references: [id])
  items      ProformaItem[]
}

model ProformaItem {
  id          String   @id @default(uuid())
  proformaId  String
  description String
  amount      Decimal  @db.Decimal(10, 2)
  quantity    Int
  proforma    Proforma @relation(fields: [proformaId], references: [id])
  tenantId    String   @default("default")
}

model CreditSchedule {
  id         String       @id @default(uuid())
  contractId String
  dueDate    DateTime
  amount     Decimal      @db.Decimal(10, 2)
  paidAmount Decimal      @default(0) @db.Decimal(10, 2)
  status     CreditStatus @default(PENDING)
  createdAt  DateTime     @default(now())
  contract   Contract     @relation(fields: [contractId], references: [id])
  tenantId   String       @default("default")
  // tenant relation omitted often in weak entities if not strictly queried, but good for consistency. 
  // Wait, CreditSchedule is weak to Contract. If Contract has Tenant, maybe enough? 
  // But user asked for table config key-value flexible. 
  // Let's keep tenantId on everything for row-level security.

}

model Payment {
  id         String        @id @default(uuid())
  contractId String?       // Made Optional for direct invoice payments
  invoiceId  String?       // Link to specific invoice
  amount     Decimal       @db.Decimal(10, 2)
  date       DateTime      @default(now())
  method     PaymentMethod
  invoice    Invoice?      @relation(fields: [invoiceId], references: [id])
  contract   Contract?     @relation(fields: [contractId], references: [id])
  tenantId   String        @default("default")
  tenant     Tenant        @relation(fields: [tenantId], references: [id])
}

model Invoice {
  id         String        @id @default(uuid())
  number     String        @unique
  patientId  String
  contractId String?
  amount     Decimal       @db.Decimal(10, 2)
  balance    Decimal       @default(0) @db.Decimal(10, 2)
  status     InvoiceStatus @default(PENDING)
  issuedAt   DateTime      @default(now())
  dueDate    DateTime?
  fiscalData String?
  
  patient    Patient       @relation(fields: [patientId], references: [id])
  contract   Contract?     @relation(fields: [contractId], references: [id])
  payment    Payment[]     // One invoice can be paid in multiple payments? Or usually one? Keeping 1:N for flexibility or 1:1 if simple. 
                             // Wait, Payment has invoiceId (scalar). So Invoice has payments (array).
  items      InvoiceItem[]
  tenantId   String        @default("default")
  tenant     Tenant        @relation(fields: [tenantId], references: [id])
  type       InvoiceType   @default(CONTADO)
}

model InvoiceItem {
  id          String  @id @default(uuid())
  invoiceId   String
  description String
  quantity    Int
  unitPrice   Decimal @db.Decimal(10, 2)
  total       Decimal @db.Decimal(10, 2)
  discount    Decimal @default(0) @db.Decimal(10, 2)
  taxRate     Decimal @default(10) @db.Decimal(5, 2)
  invoice     Invoice @relation(fields: [invoiceId], references: [id])
  tenantId    String  @default("default")
  tenant      Tenant      @relation(fields: [tenantId], references: [id])
}

enum InvoiceStatus {
  PENDING
  PAID
  CANCELLED
  PARTIALLY_PAID
  DRAFT
}

enum InvoiceType {
  CONTADO
  CREDITO
}

model ServicePerformed {
  id        String   @id @default(uuid())
  serviceId String
  date      DateTime @default(now())
  notes     String?
  service   Service  @relation(fields: [serviceId], references: [id])
  tenantId  String   @default("default")
}

enum Role {
  ADMIN
  RECEPCION
  ODONTOLOGO
}

enum ServiceType {
  CONSULTORIO
  LABORATORIO
  TERCERIZADO
}

enum QuoteStatus {
  DRAFT
  APPROVED
  REJECTED
  CONVERTED
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  DEBIT_CARD
  TRANSFER
  CREDIT
  OTHER
}

enum CreditStatus {
  PENDING
  PAID
  OVERDUE
  PARTIALLY_PAID
}

enum ContractStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

model Office {
  id        String   @id @default(uuid())
  name      String   @unique
  location  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tenantId  String   @default("default")
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model SystemConfig {
  id          String   @id @default(uuid())
  tenantId    String
  key         String
  value       Json
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, key])
}

model Tenant {
  id          String       @id @default(uuid())
  name        String
  description String?
  status      TenantStatus @default(ACTIVE)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  users             User[]
  patients          Patient[]
  services          Service[]
  quotes            Quote[]
  contracts         Contract[]
  invoices          Invoice[]
  payments          Payment[]
  configs           SystemConfig[]
  serviceCategories ServiceCategory[]
  serviceAreas      ServiceArea[]
  offices           Office[]
  proformas         Proforma[]
  invoiceItems      InvoiceItem[]
  personDocumentTypes PersonDocumentType[]
}

model PersonDocumentType {
  id        String   @id @default(uuid())
  code      String   // CI, RUC, PASS
  name      String   // CÃ©dula de Identidad, etc.
  isActive  Boolean  @default(true)
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  patients  Patient[]

  @@unique([tenantId, code])
}

enum TenantStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}
